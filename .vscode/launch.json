{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run main.ts",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}\\typescript-first\\src\\main.ts",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": ["${workspaceFolder}/typescript-first/dist/**/*.js"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch express app",
      "runtimeExecutable": "nodemon", // to restart when files change
      "program": "${workspaceFolder}\\src\\express-first-app\\bin\\www",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "msedge",
      "request": "launch",
      "name": "Launch Edge against localhost",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    }
  ]
}
